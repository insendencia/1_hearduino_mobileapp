<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Popout_LoginWGoogle"
    android:background="#D6D6D6"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/popout_screen"
        android:layout_margin="40dp"
        android:layout_gravity="center">

        <!-- text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="TO ACCESS HEARDUINO, PLEASE MAKE SURE TO MEET THE FOLLOWING REQUIREMENTS:"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <!-- requirements text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="1.  Google Personal Account"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="2. Google Authenticator Application"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textAlignment="center"/>

        <!-- login with google button -->
        <!-- fix button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginwgoogle"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Login With Google"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:backgroundTint="@color/gray"/>

    </LinearLayout>

</LinearLayout>
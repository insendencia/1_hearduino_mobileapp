<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:background="@color/white"
    tools:context=".Activity_SignUp2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="35dp">

        <!-- welcome header -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="Welcome to"
                android:textColor="@color/black"
                android:textSize="70px"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="218dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:background="@drawable/hearduino_logo" />
        </LinearLayout>

        <!-- review information text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="REVIEW INFORMATION"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="25dp"
            />

        <!-- name -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME:"
                android:fontFamily="@font/poppins_extrabold"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"/>

            <TextView
                android:id="@+id/setName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <!-- email -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL:"
                android:fontFamily="@font/poppins_extrabold"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"/>

            <TextView
                android:id="@+id/setEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <!-- phone number -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NUMBER:"
                android:fontFamily="@font/poppins_extrabold"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"/>

            <TextView
                android:id="@+id/setNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <!-- question -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="DO YOU HAVE HEARING DISABILITIES?"
            android:textColor="@color/black"
            android:textSize="55px"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- yes or no buttons -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/bYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="YES"
                android:textSize="18dp"
                android:backgroundTint="@color/gray"
                android:textColor="@color/hearduino_black"/>

            <Button
                android:id="@+id/bNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="NO"
                android:textSize="18dp"
                android:backgroundTint="@color/gray"
                android:textColor="@color/hearduino_black"/>
        </TableRow>


    </LinearLayout>

</RelativeLayout>
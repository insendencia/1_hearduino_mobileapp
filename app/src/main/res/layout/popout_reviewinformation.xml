<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Popout_ReviewInformation"
    android:background="#D6D6D6"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical"
        android:background="@drawable/popout_screen"
        android:layout_margin="40dp"
        android:layout_gravity="center">

        <!-- logo -->
        <ImageView
            android:id="@+id/hLogo"
            android:layout_width="275dp"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:background="@drawable/hearduino_logo"
            android:layout_centerHorizontal="true"/>

        <!-- text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_extrabold"
            android:text="REVIEW INFORMATION"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <!-- name -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME:"
                android:fontFamily="@font/poppins_extrabold"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"/>

            <TextView
                android:id="@+id/setName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <!-- email -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL:"
                android:fontFamily="@font/poppins_extrabold"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"/>

            <TextView
                android:id="@+id/setEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <!-- phone number -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NUMBER:"
                android:fontFamily="@font/poppins_extrabold"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"/>

            <TextView
                android:id="@+id/setNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <!-- relation to the user -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/setRelationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RELATION:"
                android:fontFamily="@font/poppins_extrabold"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"
                />

            <TextView
                android:id="@+id/setRelation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                />
        </LinearLayout>


        <!-- login with google button -->
        <!-- fix button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_extrabold"
            android:text="SIGN UP"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:backgroundTint="@color/gray"
            android:ems="10"/>

    </LinearLayout>

</LinearLayout>